<h1>Bienvenido a la segunda entrega</h1>
<h2>Lista de productos en tiempo real</h2>

<ul id="product-list">
  {{#each products}}
    <li><strong>{{title}}</strong> - ${{price}}</li>
  {{/each}}
</ul>

<hr />

<h3>Agregar producto</h3>
<form id="product-form">
  <label for="title">Título:</label>
  <input type="text" id="title" name="title" required />

  <label for="description">Descripción:</label>
  <input type="text" id="description" name="description" required />

  <label for="code">Código:</label>
  <input type="text" id="code" name="code" required />

  <label for="price">Precio:</label>
  <input type="number" id="price" name="price" step="0.01" required />

  <label for="status">Estado:</label>
  <select id="status" name="status" required>
    <option value="true">Activo</option>
    <option value="false">Inactivo</option>
  </select>

  <label for="stock">Stock:</label>
  <input type="number" id="stock" name="stock" required />

  <label for="category">Categoría:</label>
  <input type="text" id="category" name="category" required />

  <label for="thumbnails">Thumbnails (URL):</label>
  <input type="text" id="thumbnails" name="thumbnails" required />

  <button type="submit">Agregar</button>
</form>


<hr />

<h3>Eliminar producto</h3>
<form id="delete-form">
  <label for="deleteId">ID del producto:</label>
  <input type="text" id="deleteId" name="deleteId" required />

  <button type="submit">Eliminar</button>
</form>


<script src="/socket.io/socket.io.js"></script>
